generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Account {
  userId     String    @id @default(uuid())
  email      String    @unique
  password   String
  role       String    @default("user")
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  contact    Contact?
  profile    Profile?
}

model Contact {
  id              Int      @id @default(autoincrement())
  userId          String   @unique
  phone           String?  // <-- updated
  alternatePhone  String?  // <-- updated
  address         String?
  city            String?
  state           String?
  country         String?
  zipCode         String?  // <-- updated
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  account         Account  @relation(fields: [userId], references: [userId], onDelete: Cascade)
}

model Profile {
  id           Int      @id @default(autoincrement())
  userId       String   @unique
  firstName    String?
  lastName     String?
  dateOfBirth  DateTime?
  gender       String?
  bio          String?
  avatarUrl    String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  account      Account  @relation(fields: [userId], references: [userId], onDelete: Cascade)
}
